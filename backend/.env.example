# Server Configuration
NODE_ENV=development
PORT=3010
FRONTEND_URL=http://localhost:5185

# Database Configuration (PostgreSQL)
# üîß ZERO HARDCODING - Works with ANY PostgreSQL database!
# Just update these 5 values to connect to your database:
# - Local PostgreSQL
# - Remote PostgreSQL
# - AWS RDS, Azure Database, Google Cloud SQL
# - Heroku, DigitalOcean, or any managed PostgreSQL
# - Docker containers

DATABASE_URL=postgresql://username:password@localhost:5432/ai_chat_db
DB_HOST=localhost                    # Your database host (e.g., db.example.com, RDS endpoint)
DB_PORT=5432                         # PostgreSQL port (default: 5432)
DB_NAME=ai_chat_db                   # Your database name
DB_USER=username                     # Your database username
DB_PASSWORD=password                 # Your database password

# Optional: Enable SSL for secure connections (required by most cloud providers)
# DB_SSL=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM Configuration - Switch models by changing these 3 values!
# üéØ Supported providers: openrouter, deepseek, openai, ollama, groq, together, onprem
# üìù Just change LLM_PROVIDER, LLM_API_KEY, and LLM_MODEL to switch models!

LLM_PROVIDER=openrouter                          # Provider to use
LLM_API_KEY=your_api_key_here                    # Your API key
LLM_MODEL=mistralai/mistral-7b-instruct          # Model to use

# Optional: Provider-specific API keys (use LLM_API_KEY or these)
OPENROUTER_API_KEY=your_openrouter_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here
TOGETHER_API_KEY=your_together_api_key_here

# For on-prem or custom endpoints (Ollama, vLLM, TGI, etc.)
LLM_BASE_URL=http://localhost:11434/v1

# Advanced LLM settings (optional)
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7
LLM_SUPPORTS_TOOLS=true

# OpenAI/DeepSeek API Keys (for CopilotKit)
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# MCP Configuration
MCP_DATABASE_ENABLED=true
MCP_DATABASE_TYPE=postgresql
MCP_FILE_SYSTEM_ENABLED=false
MCP_WEB_SEARCH_ENABLED=false
MCP_WEB_SEARCH_API_KEY=

# Tool Permissions
TOOLS_ENABLED=database_query,calculator
TOOLS_REQUIRE_APPROVAL=database_query
TOOLS_AUTO_APPROVE=calculator

# API Integration Settings
API_RATE_LIMIT_ENABLED=true
API_DEFAULT_TIMEOUT=30000
API_MAX_RETRIES=3

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log